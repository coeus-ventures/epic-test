{
  "name": "epic-test",
  "version": "0.1.0",
  "description": "A collection of AI-powered testing utilities: spec-test (browser automation), b-test (LLM assertions), db-test (database state management)",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./b-test": {
      "import": "./dist/b-test/index.js",
      "types": "./dist/b-test/index.d.ts"
    },
    "./spec-test": {
      "import": "./dist/spec-test/index.js",
      "types": "./dist/spec-test/index.d.ts"
    },
    "./db-test": {
      "import": "./dist/db-test/index.js",
      "types": "./dist/db-test/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "testing",
    "e2e",
    "browser",
    "automation",
    "ai",
    "llm",
    "playwright",
    "specification",
    "behavior-driven",
    "bdd",
    "database",
    "drizzle",
    "sqlite"
  ],
  "author": "Coeus Ventures",
  "license": "MIT",
  "dependencies": {
    "@browserbasehq/stagehand": "^3.0.7",
    "@ai-sdk/openai": "^2.0.57",
    "ai": "^5.0.82",
    "drizzle-orm": "^0.40.0"
  },
  "peerDependencies": {
    "playwright": "^1.40.0",
    "@libsql/client": "^0.14.0"
  },
  "peerDependenciesMeta": {
    "@libsql/client": {
      "optional": true
    }
  },
  "devDependencies": {
    "@libsql/client": "^0.14.0",
    "@types/node": "^22.14.0",
    "jsdom": "^26.0.0",
    "playwright": "^1.52.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1",
    "eslint": "^9.24.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/coeus-ventures/epic-test.git"
  }
}
